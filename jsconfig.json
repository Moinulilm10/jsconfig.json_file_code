//? for next.js project
{
  "include": ["**/*"],
  "exclude": ["node_modules", "**/node_modules", "dist", "build", ".next"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node"
  }
}

